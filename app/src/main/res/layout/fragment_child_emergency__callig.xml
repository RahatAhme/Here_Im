<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="40dp"
    android:background="@drawable/background_im"
    tools:context=".ChildEmergency_Callig">

    <Button
        android:id="@+id/callToPolice_id"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="@drawable/log_in"
        android:text="Police"
        android:textAllCaps="false"
        android:textColor="#FFf"
        android:textSize="30sp"
        android:layout_above="@id/callToParent_id"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/callToParent_id"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="@drawable/log_in"
        android:text="Parent"
        android:layout_marginVertical="20dp"
        android:layout_centerInParent="true"
        android:textAllCaps="false"
        android:textColor="#FFf"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/callToHelpLine_id"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="@drawable/log_in"
        android:text="Help Line"
        android:layout_below="@id/callToParent_id"
        android:textAllCaps="false"
        android:textColor="#FFf"
        android:textSize="30sp"
        android:textStyle="bold"
        />

</RelativeLayout>